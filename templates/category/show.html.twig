{% extends 'base.html.twig' %}
{% block title %}Wild Series{% endblock %}
{% block body %}
    {% for program in programs %}
        <div class="media mt-4">
            <div class="media-body">

                <a href="{{ path("program_show", { id: program.id }) }}"><h2 class="mt-0">{{ program.title }}</h2></a>
                <p>{{ program.summary }}</p>
                <p>Catégorie : {{ program.category.name }}</p>
            </div>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a class="btn btn-dark m-2" href="{{ path('app_index') }}">Retour à l'accueil</a>
{% endblock %}