{% extends 'base.html.twig' %}
{% block title %}Episode #{{ program.id }}{% endblock %}
{% block body %}
    <div class="container-fluid ml-4">
        <h1 class="text my-4">{{ episodes.title }}</h1>
        <h2>Episode {{ episodes.number }}, saison {{ season.number }}
            de {{ program.title }}</h2>
        <div class="mb-2">
            {{ episodes.synopsis }}
        </div>
        <h3> Commentaires : </h3>
        <ul>
            {% for comment in episodes.comments %}
                <li>De : {{ comment.author.email }} <br>
                    Note : {{ comment.rate }} <br>
                    Commentaire : {{ comment.comment }}
                </li>
            {% endfor %}
        </ul>
        {% if app.user %}
        <h3>Ajouter un commentaire</h3>
        {{ include('episode/_form.html.twig') }}
        <a class="btn btn-dark m-2"
           href="{{ path("program_showSeason", { program: program.id , season: season.id }) }}">Retour à la liste des
            épisodes</a>
    </div>
    {% endif %}
{% endblock %}
